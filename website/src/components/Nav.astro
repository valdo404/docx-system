---
import type { Lang } from '../i18n/ui';
import { useTranslations, getLocalizedPath } from '../i18n/utils';

interface Props {
  lang: Lang;
  authenticated?: boolean;
  userName?: string;
}

const { lang, authenticated = false, userName } = Astro.props;
const t = useTranslations(lang);
const otherLang = lang === 'fr' ? 'en' : 'fr';
const switchPath = lang === 'fr' ? '/en/' : '/';
---

<nav class="nav">
  <div class="nav-container">
    <a href={getLocalizedPath('/', lang)} class="logo">
      <div class="logo-icon">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="3" y="2" width="14" height="18" rx="2" stroke="currentColor" stroke-width="1.5"/>
          <path d="M7 7h6M7 11h6M7 15h4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <circle cx="18" cy="18" r="5" fill="#0078d4"/>
          <path d="M16 18h4M18 16v4" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <span>docx-mcp</span>
    </a>
    <div class="nav-links">
      {!authenticated && (
        <>
          <a href="#products">{t('nav.products')}</a>
          <a href="#vision">{t('nav.vision')}</a>
        </>
      )}
      {authenticated && (
        <>
          <span class="nav-user">{userName}</span>
          <a href={getLocalizedPath('/tableau-de-bord', lang)} class="nav-dashboard-link">
            {t('nav.dashboard')}
          </a>
        </>
      )}
      <a href={switchPath} class="nav-lang">{otherLang.toUpperCase()}</a>
      <a href="https://github.com/valdo404/docx-mcp" target="_blank" rel="noopener" class="nav-github">
        <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
      </a>
    </div>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(15, 15, 15, 0.85);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border-subtle);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-l) var(--spacing-xxl);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-s);
    color: var(--text-primary);
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-400);
  }

  .logo:hover {
    text-decoration: none;
  }

  .logo-icon {
    width: 28px;
    height: 28px;
    color: var(--text-primary);
  }

  .logo-icon svg {
    width: 100%;
    height: 100%;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--spacing-xxl);
  }

  .nav-links a {
    color: var(--text-secondary);
    font-size: var(--font-size-300);
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--text-primary);
    text-decoration: none;
  }

  .nav-github {
    display: flex;
    align-items: center;
  }

  .nav-lang {
    padding: var(--spacing-xs) var(--spacing-m);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-s);
    font-size: var(--font-size-200);
    font-weight: var(--font-weight-semibold);
  }

  .nav-user {
    color: var(--text-secondary);
    font-size: var(--font-size-300);
  }

  .nav-dashboard-link {
    color: var(--brand-primary) !important;
  }

  @media (max-width: 640px) {
    .nav-links a:not(.nav-github):not(.nav-lang) {
      display: none;
    }
  }
</style>
