---
import type { Lang } from '../i18n/ui';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="vision" class="vision">
  <div class="container">
    <div class="vision-content">
      <h2>{t('vision.title')}</h2>
      <p>{t('vision.description')}</p>
      <div class="vision-features">
        <div class="vision-feature">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
          </div>
          <div class="feature-text">
            <h4>{t('vision.multiplatform.title')}</h4>
            <p>{t('vision.multiplatform.description')}</p>
          </div>
        </div>
        <div class="vision-feature">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M12 1v6m0 6v10M1 12h6m6 0h10"/></svg>
          </div>
          <div class="feature-text">
            <h4>{t('vision.ainative.title')}</h4>
            <p>{t('vision.ainative.description')}</p>
          </div>
        </div>
        <div class="vision-feature">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          </div>
          <div class="feature-text">
            <h4>{t('vision.enterprise.title')}</h4>
            <p>{t('vision.enterprise.description')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-xxl);
  }

  .vision {
    padding: 100px 0;
    background: var(--bg-layer-2);
    border-top: 1px solid var(--border-subtle);
  }

  .vision-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .vision-content h2 {
    font-size: var(--font-size-700);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .vision-content > p {
    font-size: var(--font-size-400);
    color: var(--text-secondary);
    line-height: 1.7;
    text-align: center;
    margin-bottom: 60px;
  }

  .vision-features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xxl);
  }

  .vision-feature { text-align: center; }

  .feature-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto var(--spacing-xl);
    color: var(--brand-primary);
  }

  .feature-icon svg { width: 100%; height: 100%; }

  .feature-text h4 {
    font-size: var(--font-size-400);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-s);
  }

  .feature-text p {
    font-size: var(--font-size-300);
    color: var(--text-tertiary);
    line-height: 1.5;
  }

  @media (max-width: 1024px) {
    .vision-features {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>
