<script>
  // Doccy messages - rotating tips
  const messages = [
    "Hi! I'm Doccy. It looks like you're trying to edit a Word document. Would you like AI to do it for you?",
    "Did you know? I can update tables, format headings, and fix your executive summaries automatically!",
    "Tired of copy-pasting? Let me connect your AI assistant directly to your .docx files!",
    "Fun fact: I can undo and redo changes, just like time travel but for documents!",
    "Looking for a way to batch-edit 100 reports? I've got you covered with agentic workflows!",
    "I work with Claude, ChatGPT, and any MCP-compatible AI. Pretty cool, right?",
    "Your documents on SharePoint? Microsoft 365? S3? I'll be there soon!",
    "Word Add-in coming soon! I'll be right inside Microsoft Word on Windows, Mac, and iPad.",
  ];

  let messageIndex = 0;
  let bubbleHidden = false;

  const bubble = document.getElementById('doccy-bubble');
  const messageEl = document.getElementById('doccy-message');
  const closeBtn = document.getElementById('doccy-close');
  const character = document.getElementById('doccy-character');
  const container = document.getElementById('doccy');
  const eyeBgs = document.querySelectorAll('.doccy-eye-bg');

  // Close bubble
  closeBtn?.addEventListener('click', () => {
    bubble?.classList.add('hidden');
    bubbleHidden = true;
  });

  // Click character to show bubble again with new message
  character?.addEventListener('click', () => {
    if (bubbleHidden) {
      messageIndex = (messageIndex + 1) % messages.length;
      if (messageEl) messageEl.textContent = messages[messageIndex];
      bubble?.classList.remove('hidden');
      bubbleHidden = false;
    }
  });

  // Rotate messages every 8 seconds if bubble is visible
  setInterval(() => {
    if (!bubbleHidden && messageEl) {
      messageIndex = (messageIndex + 1) % messages.length;
      messageEl.style.opacity = '0';
      setTimeout(() => {
        messageEl.textContent = messages[messageIndex];
        messageEl.style.opacity = '1';
      }, 200);
    }
  }, 8000);

  // Random blink effect
  setInterval(() => {
    eyeBgs.forEach(eye => {
      eye.classList.add('blink');
      setTimeout(() => eye.classList.remove('blink'), 150);
    });
  }, 3000 + Math.random() * 2000);

  // Add transition for message fade
  if (messageEl) {
    messageEl.style.transition = 'opacity 0.2s ease';
  }
</script>
