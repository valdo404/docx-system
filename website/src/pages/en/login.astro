---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
---

<Layout title={`${t('auth.title')} â€” Docx System`}>
  <div class="login-page">
    <div class="login-card">
      <div class="login-logo">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" width="48" height="48">
          <rect x="3" y="2" width="14" height="18" rx="2" stroke="currentColor" stroke-width="1.5"/>
          <path d="M7 7h6M7 11h6M7 15h4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <circle cx="18" cy="18" r="5" fill="#0078d4"/>
          <path d="M16 18h4M18 16v4" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        <span>Docx System</span>
      </div>

      <h1>{t('auth.title')}</h1>

      <div class="login-buttons">
        <button class="oauth-btn github" data-provider="github">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          {t('auth.github')}
        </button>
      </div>

      <a href="/en/" class="login-back">&larr; Docx System</a>
    </div>
  </div>
</Layout>

<script>
  import { authClient } from '../../lib/auth-client';

  document.querySelectorAll('.oauth-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const provider = (btn as HTMLElement).dataset.provider as 'github';
      await authClient.signIn.social({
        provider,
        callbackURL: '/en/dashboard',
      });
    });
  });
</script>

<style>
  .login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xxl);
  }

  .login-card {
    background: var(--bg-layer-2);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-l);
    padding: 48px;
    width: 100%;
    max-width: 420px;
    text-align: center;
  }

  .login-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-m);
    margin-bottom: var(--spacing-xxxl);
    color: var(--text-primary);
    font-size: var(--font-size-500);
    font-weight: var(--font-weight-semibold);
  }

  h1 {
    font-size: var(--font-size-700);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-xxxl);
  }

  .login-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
    margin-bottom: var(--spacing-xxxl);
  }

  .oauth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-m);
    width: 100%;
    padding: var(--spacing-l) var(--spacing-xl);
    border-radius: var(--radius-s);
    font-size: var(--font-size-300);
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all 0.15s ease;
    border: 1px solid var(--border-default);
  }

  .oauth-btn.github {
    background: var(--bg-layer-3);
    color: var(--text-primary);
  }

  .oauth-btn.github:hover { background: var(--bg-layer-4); }

  .login-back {
    font-size: var(--font-size-300);
    color: var(--text-tertiary);
  }

  .login-back:hover { color: var(--text-primary); }
</style>
