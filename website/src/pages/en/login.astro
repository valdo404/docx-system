---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
---

<Layout title={`${t('auth.title')} â€” Docx System`}>
  <div class="login-page">
    <div class="login-card">
      <div class="login-logo">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" width="48" height="48">
          <rect x="3" y="2" width="14" height="18" rx="2" stroke="currentColor" stroke-width="1.5"/>
          <path d="M7 7h6M7 11h6M7 15h4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <circle cx="18" cy="18" r="5" fill="#0078d4"/>
          <path d="M16 18h4M18 16v4" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        <span>Docx System</span>
      </div>

      <h1>{t('auth.title')}</h1>

      <div class="login-buttons">
        <button class="oauth-btn github" data-provider="github">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          {t('auth.github')}
        </button>

        <button class="oauth-btn google" data-provider="google">
          <svg viewBox="0 0 24 24" width="20" height="20"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/></svg>
          {t('auth.google')}
        </button>

        <button class="oauth-btn microsoft" data-provider="microsoft">
          <svg viewBox="0 0 24 24" width="20" height="20"><rect x="1" y="1" width="10" height="10" fill="#F25022"/><rect x="13" y="1" width="10" height="10" fill="#7FBA00"/><rect x="1" y="13" width="10" height="10" fill="#00A4EF"/><rect x="13" y="13" width="10" height="10" fill="#FFB900"/></svg>
          {t('auth.microsoft')}
        </button>
      </div>

      <a href="/en/" class="login-back">&larr; Docx System</a>
    </div>
  </div>
</Layout>

<script>
  import { authClient } from '../../lib/auth-client';

  document.querySelectorAll('.oauth-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const provider = (btn as HTMLElement).dataset.provider as 'github' | 'google' | 'microsoft';
      await authClient.signIn.social({
        provider,
        callbackURL: '/en/dashboard',
      });
    });
  });
</script>

<style>
  .login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xxl);
  }

  .login-card {
    background: var(--bg-layer-2);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-l);
    padding: 48px;
    width: 100%;
    max-width: 420px;
    text-align: center;
  }

  .login-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-m);
    margin-bottom: var(--spacing-xxxl);
    color: var(--text-primary);
    font-size: var(--font-size-500);
    font-weight: var(--font-weight-semibold);
  }

  h1 {
    font-size: var(--font-size-700);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-xxxl);
  }

  .login-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
    margin-bottom: var(--spacing-xxxl);
  }

  .oauth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-m);
    width: 100%;
    padding: var(--spacing-l) var(--spacing-xl);
    border-radius: var(--radius-s);
    font-size: var(--font-size-300);
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all 0.15s ease;
    border: 1px solid var(--border-default);
  }

  .oauth-btn.github {
    background: var(--bg-layer-3);
    color: var(--text-primary);
  }

  .oauth-btn.github:hover { background: var(--bg-layer-4); }

  .oauth-btn.google {
    background: #ffffff;
    color: #1f1f1f;
    border-color: #dadce0;
  }

  .oauth-btn.google:hover { background: #f8f9fa; }

  .oauth-btn.microsoft {
    background: #0078d4;
    color: white;
    border-color: #0078d4;
  }

  .oauth-btn.microsoft:hover { background: #106ebe; }

  .login-back {
    font-size: var(--font-size-300);
    color: var(--text-tertiary);
  }

  .login-back:hover { color: var(--text-primary); }
</style>
